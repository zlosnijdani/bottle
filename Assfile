project: bottle
git: git@github.com:zlosnijdani/bottle.git
description: Fast, simple,lightweight WSGI micro web-framework.
module: bottle

tasks:

  gotoenv:
    private: true
    template: activate@pymodule
  
  build:
    related: clean
    template: pymodule
    src: setup.py

  install:
    related:
      - build
      - gotoenv
    template: pymodule
    src: setup.py
    then:
      template: deactivate@pymodule
      then:
          shell: rm {prg:self.venv}/bin/bottle.py

  clean:
    recursive: false
    shell: rm -rf build
